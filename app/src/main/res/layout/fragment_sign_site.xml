<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing"
        android:paddingBottom="@dimen/spacing"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing2x" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing2h"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="right|center_vertical"
                        android:text="@string/s_f1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <EditText
                        android:id="@+id/type_site"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:padding="@dimen/spacing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" />
                </TableRow>

                <TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="@string/s_f5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <TextView
                        android:id="@+id/fragment_sign_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:drawableRight="@mipmap/ic_next"
                        android:padding="@dimen/spacing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>
                </TableRow>
                
                <TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="@string/s_f6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <EditText
                        android:id="@+id/fragment_sign_site_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:padding="@dimen/spacing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" />
                </TableRow>
            </TableLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/fragment_sign_site_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/spacing"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_camera2" >
                </ImageButton>

                <ImageButton
                    android:id="@+id/fragment_sign_site_tape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/spacing"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_tape2"
                    android:visibility="gone" >
                </ImageButton>
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/view_media" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>