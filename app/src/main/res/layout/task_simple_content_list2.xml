<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/textView_project_bh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="编号"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_16" />
        <com.chinadci.mel.mleo.ui.views.BadgeView
            android:id="@+id/bagde"
            android:layout_width="wrap_content"
            android:layout_alignTop="@id/textView_project_bh"
            android:layout_alignBottom="@id/textView_project_bh"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/spacing"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing" >

        <TextView
            android:id="@+id/textView_project_tcmc_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="案件来源："
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14" />

        <TextView
            android:id="@+id/textView_project_ajly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView_project_tcmc_div"
            android:singleLine="true"
            android:text="日常巡查"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_jcbh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:orientation="horizontal"
        android:singleLine="true"
        android:text="监测编号："
        android:textColor="@color/black"
        android:textSize="@dimen/fontsize_14"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tt_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14" />

        <TextView
            android:id="@+id/btn_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_btn_blue"
            android:paddingBottom="@dimen/spacing"
            android:paddingLeft="@dimen/spacing2x"
            android:paddingRight="@dimen/spacing2x"
            android:paddingTop="@dimen/spacing"
            android:text="带我去"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_14"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_xxdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_dh"
            android:layout_toRightOf="@id/tt_div"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/spacing"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_sj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/fontsize_small" >
        </TextView>

        <TextView
            android:id="@+id/adapter_case_chexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/spacing"
            android:text="撤销"
            android:background="@drawable/bg_normal"
            android:textColor="#0078AA"
            android:padding="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:visibility="gone" />
        <!-- android:drawableLeft="@drawable/ic_redo"
        android:background="@color/transparent"
        android:paddingRight="@dimen/spacing" -->
    </LinearLayout>

</LinearLayout>