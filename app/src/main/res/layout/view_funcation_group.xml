<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing" >

    <TextView
        android:id="@+id/view_funcationgroup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#414445"
        android:textSize="@dimen/fontsize_medium" />

    <com.chinadci.android.ui.views.NoScrollGridView
        android:id="@+id/view_funcationgroup_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:choiceMode="none"
        android:clickable="false"
        android:columnWidth="88dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:horizontalSpacing="@dimen/spacing"
        android:listSelector="@color/transparent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/spacing2x" >
    </com.chinadci.android.ui.views.NoScrollGridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/spacing2x"
        android:background="#cccccc" >
    </View>

</LinearLayout>