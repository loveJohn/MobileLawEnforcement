<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_corners_4"
    android:padding="@dimen/spacing" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/adapter_case_keyvalues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/spacing"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/adapter_case_localtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/fontsize_small" >
            </TextView>

            <TextView
                android:id="@+id/adapter_case_chexiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_redo"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/spacing"
                android:paddingRight="@dimen/spacing" />
            <TextView
                android:id="@+id/adapter_case_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_clear2"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/spacing"
                android:paddingRight="@dimen/spacing" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_case_numview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_number"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing2h"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_12" >
    </TextView>

</RelativeLayout>