                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <RadioGroup
                        android:id="@+id/fragment_mineral_log_edite_radio_g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:gravity="left"
                        android:padding="@dimen/spacing" >

                        <RadioButton
                            android:id="@+id/fragment_mineral_log_edite_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/ic_selected"
                            android:checked="true"
                            android:paddingLeft="@dimen/spacing4x"
                            android:text="未发现非法采矿"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/fragment_mineral_log_edite_radio_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing2h"
                            android:button="@drawable/ic_selected"
                            android:paddingLeft="@dimen/spacing4x"
                            android:text="发现非法采矿"
                            android:textColor="@color/black" />
                    </RadioGroup>
                </TableRow>
                <TableRow
                    android:id="@+id/RowZZWS"
                    android:paddingTop="@dimen/spacing2h"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
