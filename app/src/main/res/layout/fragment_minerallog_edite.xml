<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing"
        android:paddingBottom="@dimen/spacing"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing2x" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing2h"
                android:shrinkColumns="1"
                android:stretchColumns="1" >
				<TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="巡查类型："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <com.chinadci.mel.android.ui.views.DropDownSpinner
                        android:id="@+id/fragment_mineral_log_edite_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:drawableRight="@mipmap/ic_dropdown"
                        android:padding="@dimen/spacing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </com.chinadci.mel.android.ui.views.DropDownSpinner>
                </TableRow>
                <TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="巡查日期："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <TextView
                        android:id="@+id/fragment_mineral_log_edite_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:cursorVisible="true"
                        android:drawableRight="@mipmap/ic_next"
                        android:focusableInTouchMode="true"
                        android:padding="@dimen/spacing"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/blue"
                        android:textSize="@dimen/fontsize_normal" />
                </TableRow>

                <TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="巡查线路："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <EditText
                        android:id="@+id/fragment_mineral_log_edite_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:padding="@dimen/spacing"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@color/blue"
                        android:textSize="@dimen/fontsize_normal" />
                </TableRow>
				<TableRow android:paddingTop="@dimen/spacing2h" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="所在村居："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <TextView
                        android:id="@+id/fragment_case_edite_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_autotextview"
                        android:drawableRight="@mipmap/ic_next"
                        android:padding="@dimen/spacing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>
                </TableRow>
                <TableRow
                    android:id="@+id/RowFFCKBH"
                    android:paddingTop="@dimen/spacing2h"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:text="非法采矿点编号："
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontsize_normal" >
                    </TextView>

                    <com.chinadci.mel.android.ui.views.DropDownSpinner
