<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment-设置-用户信息 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing" >

        <com.chinadci.android.ui.views.NoScrollListView
            android:id="@+id/fragment_user_alterlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing"
            android:background="@drawable/shape_rec_corners_4_default"
            android:choiceMode="singleChoice"
            android:divider="#c8c8c8"
            android:dividerHeight="1px" >
        </com.chinadci.android.ui.views.NoScrollListView>

        <com.chinadci.android.ui.views.NoScrollListView
            android:id="@+id/fragment_user_baselist"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_marginTop="@dimen/spacing2x"
            android:background="@drawable/shape_rec_corners_4_default"
            android:choiceMode="none"
            android:divider="#c8c8c8"
            android:dividerHeight="1px"
            android:listSelector="@color/transparent" >
        </com.chinadci.android.ui.views.NoScrollListView>
        
        <com.chinadci.android.ui.views.NoScrollListView
            android:id="@+id/fragment_user_funlist"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_marginTop="@dimen/spacing2x"
            android:background="@drawable/shape_rec_corners_4_default"
            android:choiceMode="none"
            android:divider="#c8c8c8"
            android:dividerHeight="1px"
            android:listSelector="@color/transparent" >
        </com.chinadci.android.ui.views.NoScrollListView>

        <Button
            android:id="@+id/fragment_user_logoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing4x"
            android:background="@drawable/bg_redbutton"
            android:text="注销登录"
            android:textColor="#fff"
            android:textSize="@dimen/fontsize_medium" />
    </LinearLayout>

</ScrollView>