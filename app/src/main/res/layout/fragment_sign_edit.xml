<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing"
        android:paddingBottom="@dimen/spacing"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing2x" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing2h"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow android:paddingTop="@dimen/spacing2h" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/s_f5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </TextView>

                <TextView
                    android:id="@+id/fragment_sign_edit_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_autotextview"
                    android:drawableRight="@mipmap/ic_next"
                    android:padding="@dimen/spacing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </TextView>
            </TableRow>

            <TableRow android:paddingTop="@dimen/spacing2h" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/s_f6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </TextView>

                <EditText
                    android:id="@+id/fragment_sign_edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_autotextview"
                    android:padding="@dimen/spacing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" />
            </TableRow>

            <TableRow android:paddingTop="@dimen/spacing2h" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/s_f8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </TextView>

                <com.chinadci.mel.android.ui.views.DropDownSpinner
                    android:id="@+id/fragment_sign_edit_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_autotextview"
                    android:drawableRight="@mipmap/ic_dropdown"
                    android:padding="@dimen/spacing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </com.chinadci.mel.android.ui.views.DropDownSpinner>
            </TableRow>

            <TableRow android:paddingTop="@dimen/spacing2h" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/s_f7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" >
                </TextView>

                <EditText
                    android:id="@+id/fragment_sign_edit_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_autotextview"
                    android:gravity="left|top"
                    android:padding="@dimen/spacing"
                    android:paddingLeft="@dimen/spacing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_normal" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>