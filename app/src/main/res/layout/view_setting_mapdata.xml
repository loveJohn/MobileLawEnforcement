<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment-设置-地图数据源 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing"
        android:background="@drawable/shape_rec_corners_4_default"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="地图数据源"
                android:textColor="#1c5f01"
                android:textSize="@dimen/fontsize_normal" />

            <Switch
                android:id="@+id/setting_mapdata_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:gravity="left|center_vertical"
                android:switchTextAppearance="@style/textappearance_switch"
                android:textOff="离线地图"
                android:textOn="在线地图"
                android:thumb="@drawable/thumb_measure"
                android:track="@drawable/track_measure" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c8c8c8" />

        <TextView
            android:id="@+id/setting_mapdata_bvmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableRight="@mipmap/ic_setting_next"
            android:padding="@dimen/spacing"
            android:text="基础地图服务地址"
            android:textColor="@drawable/fontcolor_settingtext"
            android:textSize="@dimen/fontsize_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c8c8c8" />

        <TextView
            android:id="@+id/setting_mapdata_rsmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableRight="@mipmap/ic_setting_next"
            android:padding="@dimen/spacing"
            android:text="影像地图服务地址"
            android:textColor="@drawable/fontcolor_settingtext"
            android:textSize="@dimen/fontsize_normal" />
    </LinearLayout>

</LinearLayout>